<?xml version="1.0"?>
<project name="basic_logger" default="dist">

  <property file="build.properties"/>
  <import file="../build.xml"/>

  <target name="local.dist" depends="common.local.dist,launcher">
    <copy todir="${dist}">
      <fileset dir="${lib}" includes="*shell*.jar"/>
    </copy>
    <copy file="${launcher.jar}" todir="${example.dir}"/>
  </target>

  <target name="local.pde" depends="common.local.pde">
    <unjar src="${-output}" dest="META-INF/embedded"/>
  </target>

  <target name="local.clean" depends="common.local.clean">
    <delete file="${example.dir}/launcher.jar"/>
  </target>

</project>
